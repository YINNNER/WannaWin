<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailFindPayActivity">
    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbar_detail_find_pay"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--android:minHeight="?attr/actionBarSize"-->
        <!--android:theme="?attr/actionBarTheme" />-->

    <com.citiexchangeplatform.pointsleague.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView_name_detail_find_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="name"
        android:textSize="24sp"/>

    <View
        android:background="@color/colorUnable"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

    <TextView
        android:id="@+id/textView_description_detail_find_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="description"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView_points_detail_find_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="points"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView_time_detail_find_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="time"
        android:textSize="18sp"/>

    <View
        android:background="@color/colorUnable"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>

    <Button
        android:id="@+id/button_detail_find_pay"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认兑换"
        android:backgroundTint="@color/colorPrimary"/>

</LinearLayout>