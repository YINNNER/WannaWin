<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFindActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.citiexchangeplatform.pointsleague.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!--<android.support.v7.widget.Toolbar-->
            <!--android:id="@+id/toolbar_detail_find"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:background="?attr/colorPrimary"-->
            <!--android:minHeight="?attr/actionBarSize"-->
            <!--android:theme="?attr/actionBarTheme" />-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_logo_detail_find"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/nike_logo" />

                <TextView
                    android:id="@+id/textView_name_detail_find"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="name"
                    android:textSize="24sp" />
            </LinearLayout>
        </FrameLayout>

        <View
            android:background="@color/colorUnable"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商家简介"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/textView_description_detail_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="description"/>
        </LinearLayout>

        <View
            android:background="@color/colorUnable"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="积分抵扣"
                android:textSize="24sp"
                android:layout_marginBottom="5dp"/>

            <ListView
                android:id="@+id/listView_detail_find"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="10dp">

            </ListView>

            <FrameLayout
                android:id="@+id/view_detail_find_empty"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="20dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家似乎还没有活动哦"
                    android:textSize="18sp"/>
            </FrameLayout>

        </LinearLayout>

        <View
            android:background="@color/colorUnable"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="线下优惠"
                android:textSize="24sp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:background="@drawable/rectangle"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="xxx"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxx"
                        android:textSize="12sp"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>





</ScrollView>