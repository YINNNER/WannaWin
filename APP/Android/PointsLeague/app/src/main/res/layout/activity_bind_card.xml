<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.citiexchangeplatform.pointsleague.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定卡片"
            android:textSize="20sp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_logo_bind_card"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:background="@drawable/edit_login"
            android:id="@+id/editText_account_bind_card"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="14"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColorHint="#CECECE"
            android:textSize="16sp"
            android:hint="请输入账户"/>

        <EditText
            android:background="@drawable/edit_login"
            android:id="@+id/editText_password_bind_card"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:ems="14"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColorHint="#CECECE"
            android:textSize="16sp"
            android:hint="请输入密码"/>

    </LinearLayout>

    <Button
        android:layout_margin="5dp"
        android:background="@drawable/orange_button"
        android:layout_gravity="center"
        android:id="@+id/button_bind_bind_card"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="绑 定"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"/>

</LinearLayout>