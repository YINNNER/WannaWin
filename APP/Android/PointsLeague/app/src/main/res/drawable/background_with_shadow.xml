<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80848FA1"/>
            <gradient
                android:angle="90"
                android:centerColor="#30848FA1"
                android:endColor="#65848fa1"
                android:startColor="#80848FA1" />
            <corners android:radius="42px" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="6px">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="42px" />
        </shape>
    </item>
</layer-list>